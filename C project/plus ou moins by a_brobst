#include <stdio.h>
#include <stdlib.h>
#include <time.h>

int choixMenu = 0;
int nombreMystere = 0;
int reponsePlayer = 0;
int choixPlayer1 = 0;
int reponsePlayer2 = 0;
int nombreCoup = 1;
int recommencerPartie = 0;
int MAX = 0;
const int MIN = 1;
int choixDifficulte = 0;

int main (int argc, char *argv[])
{
do
{
  printf ("\n=== MENU Plus ou Moins ===\n");
  printf("\nFaites votre choix entre :\n");
  printf("\n1. 1 joueur vs ordinateur\n");
  printf("\n2. 2 joueurs\n");
  scanf ("%d", &choixMenu);
  if (choixMenu == 1)
  {
    printf ("\nVous avez donc choisi de jouer contre l'ordinateur. Preparez vous alors ! ;)\n");
  }
  else if (choixMenu == 2)
  {
    printf ("\n Vous avez donc choisi de jouer a deux. Amusez vous bien ;)\n");
  }
  else
  {
    printf ("\nVous n'avez pas tape bon num√©ro.Recommencer le programme\n");
  }
  switch (choixMenu)
  {
   case 1 :
        printf("\n=== Choix de la difficulte ===\n");
        printf("\n1.Niveau 1 : entre 1 et 100\n");
        printf("\n2.Niveau 2 : entre 1 et 1000\n");
        printf("\n3.Niveau 3 : entre 1 et 10000\n");
        printf("\nAlors quel est votre choix ?\n");
        scanf("%d", &choixDifficulte);
        switch (choixDifficulte)
        {
          case 1 :
          MAX = 100;
          printf("\nDevinez un nombre entre 1 et 100 choisi par l'ordinateur en moins de coup possible.\n");
          break;
          case 2 :
          MAX = 1000;
          printf("\nDevinez un nombre entre 1 et 1000 choisi par l'ordinateur en moins de coup possible.\n");
          break;
          case 3 :
          MAX = 10000;
          printf("\nDevinez un nombre entre 1 et 10000 choisi par l'ordinateur en moins de coup possible.\n");
          break;
          default :
          printf("\nVous n'avez pas tape le bon nombre.\n");
          break;
        }
        srand (time(NULL));
        nombreMystere = (rand() % (MAX - MIN + 1 )) + MIN;
        do
        {
          printf("\nAlors quel est le nombre mystere d'apres vous ?\n");
          scanf ("%d", &reponsePlayer);
          if (reponsePlayer == nombreMystere)
          {
            printf("\nBravo !, vous avez trouve le nombre mystere en %d coup(s)\n", nombreCoup);
          }
          else if (reponsePlayer < nombreMystere)
          {
            printf("\nC'est plus ! Reessayer.\n");
          }
          else if (reponsePlayer > nombreMystere)
          {
            printf("\nC'est moins ! Reessayer.\n");
          }
          else
          {
            printf("\nil y  a un probleme\n");
          }
          nombreCoup ++;
        } while (reponsePlayer != nombreMystere);
        break;
   case 2 :
        printf("\nJoueur 1, choisisser un nombre entre 1 et 100 :\n");
        scanf("%d", &choixPlayer1);
        printf("\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n");
        printf("\nJoueur 2, a vous de trouver le nombre entre 1 et 100 en moins de coup possible. Bonne chance ! ;)\n");
        do
        {
            printf("\nAlors ? :");
            scanf("%d", &reponsePlayer2);
            if (reponsePlayer2 == choixPlayer1)
            {
            printf("\nBravo !, vous avez trouve le bon nombre en %d coup(s)\n", nombreCoup);
            }
            else if (reponsePlayer2 < choixPlayer1)
            {
                printf("\nC'est plus ! Reessayer.\n");
            }
            else if (reponsePlayer2 > choixPlayer1)
            {
            printf("\nC'est moins ! Reessayer.\n");
            }
            else
            {
                printf("\nil y a un probleme\n");
            }
            nombreCoup ++;
        }
            while (reponsePlayer2 != choixPlayer1);
            break;
            default :
            {
              printf ("Recommencer le programme");
            }
            break;
     }
printf("\nSi vous voulez recommencez la partie tapez sur 1 sinon tapez sur 0\n");
scanf("%d", &recommencerPartie);
}while (recommencerPartie);
return 0;
}
